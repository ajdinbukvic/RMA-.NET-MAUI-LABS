<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AjdinBukvic_RMA_LAB2.MainPage">

        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Button
                x:Name="StudentPageLightBtn"
                Text="Student Page Light"
                Clicked="StudentPageLight"
                HorizontalOptions="Center" />

            <Button
                x:Name="StudentPageDarkBtn"
                Text="Student Page Dark"
                Clicked="StudentPageDark"
                HorizontalOptions="Center" />

            <Button
                x:Name="ProfesorPageLightBtn"
                Text="Profesor Page Light"
                Clicked="ProfesorPageLight"
                HorizontalOptions="Center" />

            <Button
                x:Name="ProfesorPageDarkBtn"
                Text="Profesor Page Dark"
                Clicked="ProfesorPageDark"
                HorizontalOptions="Center" />

    </VerticalStackLayout>

</ContentPage>
